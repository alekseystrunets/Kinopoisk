<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragment.UserAccountFragment"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_account_user"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/baseline_account_circle_24_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_account_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Алексей Струнец"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_account_user" />

    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="a.strunetss@gmail.com"
        android:layout_width="300dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/user_account_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Статический навигационный бар -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:text="Главная"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/navigation_bar"
            app:layout_constraintBottom_toBottomOf="@id/navigation_bar"
            app:layout_constraintLeft_toLeftOf="@id/navigation_bar"/>

        <Button
            android:id="@+id/button_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:text="Настройки"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/navigation_bar"
            app:layout_constraintBottom_toBottomOf="@id/navigation_bar"
            app:layout_constraintRight_toRightOf="@id/navigation_bar"/>

        <Button
            android:id="@+id/button_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Аккаунт"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="20dp"
            app:layout_constraintTop_toTopOf="@id/navigation_bar"
            app:layout_constraintBottom_toBottomOf="@id/navigation_bar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>