<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="155dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/actors_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_drawable_for_actors_img"
        android:layout_width="130dp"
        android:layout_height="130dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_of_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/actors_img"
        app:layout_constraintStart_toStartOf="@id/actors_img"
        app:layout_constraintEnd_toEndOf="@id/actors_img"
        android:text="Your Text Here"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>